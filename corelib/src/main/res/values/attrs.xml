<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SwipeRevealLayout">
        <attr name="dragFromEdge">
            <flag name="left" value="1" />
            <flag name="right" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="SwipeListItemLayout">
        <attr name="swipeDistanceLeft" format="dimension" />
        <attr name="swipeDistanceRight" format="dimension" />
        <attr name="sneakPeakDistance" format="dimension" />
    </declare-styleable>

    <declare-styleable name="EmptystateLayout">
        <attr name="buttonTextColor" format="string" />
        <attr name="titleText" format="string" />
        <attr name="subtitleText" format="string" />
        <attr name="titleSize" format="integer" />
        <attr name="buttonTextSize" format="integer" />
        <attr name="subtitleSize" format="integer" />
        <attr name="titleSizeSp" format="dimension" />
        <attr name="buttonTextSizeSp" format="dimension" />
        <attr name="subtitleSizeSp" format="dimension" />
        <attr name="buttonLayoutHeight" format="dimension" />
        <attr name="imageDrawable" format="reference" />
        <attr name="buttonBackground" format="reference" />
        <attr name="button2Background" format="reference" />
        <attr name="expandButtonLayoutToEdge" format="boolean" />
        <attr name="titleFont" format="reference" />
        <attr name="titleColor" format="reference" />
        <attr name="subtitleColor" format="reference" />
        <attr name="subtitleFont" format="reference" />
        <attr name="buttonTextFont" format="string" />
        <attr name="showButton" format="boolean" />
        <attr name="showButton2" format="boolean" />
        <attr name="buttonText" format="string" />
        <attr name="button2Text" format="string" />
        <attr name="hideClickEffect" format="string" />
    </declare-styleable>

    <style name="BottomSheetProductDetailsFullscreenStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/transparent</item>
        <item name="colorPrimary">#6C6974</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:statusBarColor">@color/white</item>

        <!-- Set this to true if you want Full Screen without status bar -->
        <item name="android:windowFullscreen">false</item>

        <item name="android:windowIsFloating">false</item>

        <!-- This is important! Don't forget to set window background -->
        <item name="android:windowBackground">@color/transparent</item>

        <!-- Additionally if you want animations when dialog opening -->
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <declare-styleable name="ToolbarDropdownConstraintLayout">
        <attr name="title"/>
        <attr name="subtitle"/>
        <attr name="bottomShadowElevation" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="AnimatedProgressLayout">
        <attr name="currentProgress" format="integer"/>
        <attr name="showDots" format="boolean"/>
        <attr name="backgroundCornerRadius" format="integer"/>
        <attr name="backgroundAnimationEnabled" format="boolean"/>
        <attr name="progressBackgroundColor" format="color"/>
        <attr name="progressLabelColor" format="color"/>
        <attr name="endLabelColor" format="color"/>
        <attr name="endLabelPostfix" format="string"/>
        <attr name="maxProgress" format="integer"/>
        <attr name="progressLabelPostfix" format="string"/>
        <attr name="backgroundAnimationDrawable" format="reference"/>
        <attr name="backgroundDrawable" format="reference"/>
        <attr name="animateProgress" format="boolean"/>
        <attr name="progressAnimationDuration" format="integer"/>
        <attr name="forceShowProgressInPercentage" format="boolean"/>
        <attr name="progressIndentationPercentage" format="float"/>
        <attr name="progressBarEndStyle" format="enum">
            <enum name="triangle" value="0"/>
            <enum name="rounded" value="1"/>
            <enum name="straight" value="2"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="OneClickButtonWithLoadingIndicator">
        <attr name="android:fontFamily" format="reference"/>
        <attr name="android:text" format="string" localization="suggested"/>
        <attr name="textSize" format="integer"/>
        <attr name="android:textSize" format="integer"/>
        <attr name="android:textColor" format="color"/>
        <attr name="showLoadingIndicator" format="boolean"/>
        <attr name="loadingIndicatorEnabledWhenLoading" format="boolean"/>
        <attr name="loadingIndicatorColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="AnimatedBackgroundLayout">
        <attr name="centerGradientColor" format="color"/>
        <attr name="outerGradientColor" format="color"/>
        <attr name="animateBackgroundCornerRadius" format="integer"/>
        <attr name="bgAnimationEnabled" format="boolean"/>
        <attr name="bgCornerRadius" format="dimension"/>
        <attr name="bgAnimationDuration" format="integer"/>
    </declare-styleable>

    <declare-styleable name="SwipeAcceptLayout">
        <attr name="swipeDisabled" format="boolean"/>
    </declare-styleable>

    <style name="BasicBaseDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/transparent</item>
        <item name="colorPrimary">#6C6974</item>
        <item name="android:navigationBarColor">@color/transparent</item>
        <item name="android:statusBarColor">@color/white</item>

        <!-- Set this to true if you want Full Screen without status bar -->
        <item name="android:windowFullscreen">false</item>

        <item name="android:windowIsFloating">false</item>

        <!-- This is important! Don't forget to set window background -->
        <item name="android:windowBackground">@color/white</item>

        <!-- Additionally if you want animations when dialog opening -->
        <item name="android:windowEnterAnimation">@anim/enter_left</item>
        <item name="android:windowExitAnimation">@anim/exit_left</item>
    </style>

    <style name="BasicBaseRightDialogStyle" parent="Theme.AppCompat.Dialog">

        <!-- Additionally if you want animations when dialog opening -->
        <item name="android:windowEnterAnimation">@anim/enter_right</item>
        <item name="android:windowExitAnimation">@anim/exit_right</item>
    </style>

    <style name="BasicBaseBottomDialogStyle" parent="Theme.AppCompat.Dialog">

        <!-- Additionally if you want animations when dialog opening -->
        <item name="android:windowEnterAnimation">@anim/enter_bottom</item>
        <item name="android:windowExitAnimation">@anim/exit_bottom</item>
    </style>

    <declare-styleable name="PSSPriceLayout">
        <attr name="priceTextSpSize" format="integer" />
        <attr name="oreTextTopPadding" format="dimension" />
        <attr name="krTextSize" format="integer" />
        <attr name="oreTextSize" format="integer" />
        <attr name="defaultKr" format="integer" />
        <attr name="defaultOre" format="integer" />
        <attr name="priceTextFont" format="reference" />
        <attr name="priceTextColor" format="color" />
    </declare-styleable>

</resources>