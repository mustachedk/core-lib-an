<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SwipeRevealLayout">
        <attr name="dragFromEdge">
            <flag name="left" value="1" />
            <flag name="right" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="EmptystateLayout">
        <attr name="buttonTextColor" format="string" />
        <attr name="titleText" format="string" />
        <attr name="subtitleText" format="string" />
        <attr name="titleSize" format="integer" />
        <attr name="buttonTextSize" format="integer" />
        <attr name="subtitleSize" format="integer" />
        <attr name="imageDrawable" format="string" />
        <attr name="buttonBackground" format="string" />
        <attr name="titleFont" format="string" />
        <attr name="titleColor" format="reference" />
        <attr name="subtitleColor" format="reference" />
        <attr name="subtitleFont" format="reference" />
        <attr name="buttonTextFont" format="string" />
        <attr name="showButton" format="string" />
        <attr name="buttonText" format="string" />
        <attr name="hideClickEffect" format="string" />
    </declare-styleable>

    <style name="BasicBaseDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/transparent</item>
        <item name="colorPrimary">#6C6974</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:statusBarColor">@color/white</item>

        <!-- Set this to true if you want Full Screen without status bar -->
        <item name="android:windowFullscreen">false</item>

        <item name="android:windowIsFloating">false</item>

        <!-- This is important! Don't forget to set window background -->
        <item name="android:windowBackground">@color/white</item>

        <!-- Additionally if you want animations when dialog opening -->
        <item name="android:windowEnterAnimation">@anim/enter_left</item>
        <item name="android:windowExitAnimation">@anim/exit_left</item>
    </style>

    <style name="BasicBaseRightDialogStyle" parent="Theme.AppCompat.Dialog">

        <!-- Additionally if you want animations when dialog opening -->
        <item name="android:windowEnterAnimation">@anim/enter_right</item>
        <item name="android:windowExitAnimation">@anim/exit_right</item>
    </style>

    <style name="BasicBaseBottomDialogStyle" parent="Theme.AppCompat.Dialog">

        <!-- Additionally if you want animations when dialog opening -->
        <item name="android:windowEnterAnimation">@anim/enter_bottom</item>
        <item name="android:windowExitAnimation">@anim/exit_bottom</item>
    </style>
</resources>