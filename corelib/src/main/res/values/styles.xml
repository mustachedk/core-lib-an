<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomSheetDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/transparent</item>
        <item name="colorPrimary">#6C6974</item>
        <item name="android:navigationBarColor">@color/transparent</item>

        <!-- Set this to true if you want Full Screen without status bar -->
        <item name="android:windowFullscreen">false</item>

        <item name="android:windowIsFloating">false</item>

        <!-- This is important! Don't forget to set window background -->
        <item name="android:windowBackground">@color/white</item>

        <!-- Additionally if you want animations when dialog opening -->
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="FragmentDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/transparent</item>
        <item name="colorPrimary">#6C6974</item>
        <item name="android:navigationBarColor">@color/transparent</item>

        <!-- Set this to true if you want Full Screen without status bar -->
        <item name="android:windowFullscreen">false</item>

        <item name="android:windowIsFloating">false</item>

        <!-- This is important! Don't forget to set window background -->
        <item name="android:windowBackground">@color/white</item>

        <!-- Additionally if you want animations when dialog opening -->
        <item name="android:windowEnterAnimation">@anim/hold_anim</item>
        <item name="android:windowExitAnimation">@anim/hold_anim</item>
    </style>

    <style name="Toolbar.Base" parent="TextAppearance.AppCompat">
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="Toolbar.Title" parent="Toolbar.Base">
        <item name="android:textColor">@color/emptystate_header</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Toolbar.Subtitle" parent="Toolbar.Base">
        <item name="android:textColor">@color/emptystate_subheader</item>
        <item name="android:textSize">11sp</item>
        <item name="android:alpha">0.5</item>
    </style>

    <style name="Toolbar.End.Action.Base" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16dp</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Toolbar.End.Action.Regular.Black" parent="Toolbar.End.Action.Base">

    </style>
</resources>