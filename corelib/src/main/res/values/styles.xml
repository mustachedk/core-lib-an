<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="TicketMaterialDrawable">
        <attr name="color" format="color"/>
        <attr name="archSize" format="float"/>
        <attr name="centerArchSize" format="float"/>
        <attr name="shadowElevation" format="integer"/>
        <attr name="shadowRadius" format="integer"/>
        <attr name="shadowColor" format="integer"/>
        <attr name="maskChildren" format="string"/>
        <attr name="cornersRadiusd" format="integer"/>

        <attr name="arches">
            <flag name="none" value="0" />
            <flag name="left" value="1" />
            <flag name="top" value="2" />
            <flag name="right" value="4" />
            <flag name="bottom" value="8" />
            <flag name="all" value="15" />
        </attr>

        <attr name="centerArch">
            <flag name="none" value="0" />
            <flag name="left" value="1" />
            <flag name="top" value="2" />
            <flag name="right" value="4" />
            <flag name="bottom" value="8" />
            <flag name="all" value="15" />
        </attr>
    </declare-styleable>

    <style name="BottomSheetDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/transparent</item>
        <item name="colorPrimary">#6C6974</item>
        <item name="android:navigationBarColor">@color/transparent</item>

        <!-- Set this to true if you want Full Screen without status bar -->
        <item name="android:windowFullscreen">false</item>

        <item name="android:windowIsFloating">false</item>

        <!-- This is important! Don't forget to set window background -->
        <item name="android:windowBackground">@color/white</item>

        <!-- Additionally if you want animations when dialog opening -->
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="FragmentDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/transparent</item>
        <item name="colorPrimary">#6C6974</item>
        <item name="android:navigationBarColor">@color/transparent</item>

        <!-- Set this to true if you want Full Screen without status bar -->
        <item name="android:windowFullscreen">false</item>

        <item name="android:windowIsFloating">false</item>

        <!-- This is important! Don't forget to set window background -->
        <item name="android:windowBackground">@color/white</item>

        <!-- Additionally if you want animations when dialog opening -->
        <item name="android:windowEnterAnimation">@anim/hold_anim</item>
        <item name="android:windowExitAnimation">@anim/hold_anim</item>
    </style>

    <style name="EmptyState.Base" parent="TextAppearance.AppCompat">
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="EmptyState.Title" parent="EmptyState.Base">
        <item name="android:textColor">@color/emptystate_header</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="EmptyState.Subtitle" parent="EmptyState.Base">
        <item name="android:textColor">@color/emptystate_subheader</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="EmptyState.End.Action.Base" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16dp</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="EmptyState.End.Action.Regular.Black" parent="EmptyState.End.Action.Base">

    </style>

    <style name="AppTheme.Picker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorControlNormal">@color/light_gray_background</item>
    </style>

    <style name="Validation.EditText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@drawable/validation_standard_textcolor</item>
        <item name="android:hint">@drawable/validation_standard_hintcolor</item>
    </style>

</resources>