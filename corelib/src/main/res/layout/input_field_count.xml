<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="labelText"
            type="String" />

        <variable
            name="selectionText"
            type="String" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/input_field_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/remove_from_shoppinglist_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_vector_add_remove_shoppinglist_items"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_vector_minus"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toTopOf="@+id/remove_from_shoppinglist_image"
            app:layout_constraintBottom_toBottomOf="@+id/remove_from_shoppinglist_image"
            app:layout_constraintStart_toStartOf="@+id/remove_from_shoppinglist_image"
            app:layout_constraintEnd_toEndOf="@+id/remove_from_shoppinglist_image"
            />


        <TextView
            android:id="@+id/input_selection"
            android:fontFamily="@font/sf_pro_text_medium"
            android:layout_width="0dp"
            android:layout_height="@dimen/cell_height_small"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:background="@drawable/ic_vector_count_background"
            android:focusable="false"
            android:gravity="center"
            android:text="@{selectionText}"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/remove_from_shoppinglist_image"
            app:layout_constraintEnd_toStartOf="@+id/add_to_shoppinglist_image"
            tools:text="1"/>

        <ImageView
            android:id="@+id/add_to_shoppinglist_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_vector_add_remove_shoppinglist_items"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_vector_plus"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toTopOf="@+id/add_to_shoppinglist_image"
            app:layout_constraintBottom_toBottomOf="@+id/add_to_shoppinglist_image"
            app:layout_constraintStart_toStartOf="@+id/add_to_shoppinglist_image"
            app:layout_constraintEnd_toEndOf="@+id/add_to_shoppinglist_image"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>