<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="labelText"
            type="String" />

        <variable
            name="selectionText"
            type="String" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/input_field_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/input_label"
        android:fontFamily="@font/sf_pro_text_medium"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cell_height_small"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:background="@drawable/edit_label_background"
        android:focusable="true"
        android:textStyle="bold"
        android:gravity="center_vertical|start"
        android:paddingEnd="10dp"
        android:text="@{labelText}"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Butik"/>

    <TextView
        android:id="@+id/input_selection"
        android:fontFamily="@font/sf_pro_text_medium"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cell_height_small"
        android:layout_marginStart="100dp"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:background="@drawable/edit_value_background"
        android:focusable="true"
        android:gravity="center_vertical|end"
        android:paddingStart="10dp"
        android:text="@{selectionText}"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="VÃ¦lg butik"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>