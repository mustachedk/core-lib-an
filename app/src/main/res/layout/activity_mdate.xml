<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".mdate.MdateActivity">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MDate Demo"
            android:gravity="center"
            android:padding="8dp"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"/>
        <TextView android:id="@+id/txtDemoDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"/>
        <TextView android:id="@+id/txtDemoYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"/>
        <TextView android:id="@+id/txtDemoMonth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"/>
        <TextView android:id="@+id/txtDemoDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"/>
        <TextView android:id="@+id/txtDemoTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"/>
        <TextView android:id="@+id/txtDemoHour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"/>
        <TextView android:id="@+id/txtDemoMinute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"/>
        <TextView android:id="@+id/txtDemoSecond"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"/>
        <TextView android:id="@+id/txtDemoShowDayMonth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"/>
        <TextView android:id="@+id/txtDemoShowDayMonthYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"/>
        <TextView android:id="@+id/txtDemoShowShortDayMonthYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"/>
        <TextView android:id="@+id/txtDemoLongPrettyDateYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"/>
        <TextView android:id="@+id/txtDemoShortPrettyDateYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"/>
        <TextView android:id="@+id/txtDemoVeryShortPrettyDateYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"/>
        <TextView android:id="@+id/txtDemoLongPrettyDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"/>
        <TextView android:id="@+id/txtDemoShortPrettyDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"/>
        <TextView android:id="@+id/txtDemoVeryShortPrettyDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"/>
        <TextView android:id="@+id/txtDemoShowIsoWeek1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"/>
        <TextView android:id="@+id/txtDemoShowIsoWeek2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"/>
        <TextView android:id="@+id/txtDemoDanish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"/>
        <TextView android:id="@+id/txtDemoGerman"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"/>
        <TextView android:id="@+id/txtDemoEnglish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"/>
    </LinearLayout>


</ScrollView>